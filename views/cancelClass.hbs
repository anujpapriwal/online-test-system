<div class="container">
  {{> header}}
  <br />
  <div class="panel panel-default">
    <div class="panel-heading">Assign classes</div>
      <div class="panel-body">
        {{#each faculty}}
        <ul class="list-inline">
          <li>
            <b>Email: </b> {{this.email}}
          </li>
          <li>
            <b>Username: </b> {{this.username}}
          </li>
        </ul>
          {{#each this.classes}}
          <div class="panel panel-default" style="max-width: 80%; margin: 1em auto;">
            <div class="panel-body">
              <ul class="list-inline">
                <li>
                  <b>Year: </b> {{this.year}}
                </li>
                <li>
                  <b>Section: </b> {{this.section}}
                </li>
                <li>
                  <b>Subject: </b> {{this.subject}}
                </li>
              </ul>
              <form action="/cancelClass" method="post">
                <div class="col-xs-6 input-group hidden" style="margin: auto;">
                  <input id="role" type="password" class="form-control" name="username" value="{{../this.username}}">
                </div>
                <div class="col-xs-6 input-group hidden" style="margin: auto;">
                  <input id="role" type="password" class="form-control" name="subId" value="{{this._id}}">
                </div>
                <div class="input-group-btn">
                  <button class="btn btn-default" type="submit">Remove</button>
                </div>
              </form>
            </div>
          </div>
          {{/each}}
        {{/each}}
        {{username}}
    </div>
  </div>
</div>
