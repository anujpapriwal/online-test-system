
<div class="container">
  {{> header }}
  <div class="panel panel-default">
    <div class="panel-heading text-center"><h2><b>Dashboard</b></h2></div>
    <div class="panel-body">
      {{#if message}}
      <div class="alert alert-success alert-dismissible">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <strong>{{message}}</strong>
      </div>
      {{/if}}
      <div class="panel panel-default" style="max-width: 80%; margin: 1em auto;">
        <div class="panel-heading text-center"><b>Your Profile</b></div>
        <div class="panel-body">
          <ul class="list-inline">
            <li>
              <b>Email: </b> {{user.email}}
            </li>
            <li>
              <b>Username: </b> {{user.username}}
            </li>
            {{#if user.section}}
            <li>
              <b>Section: </b> {{user.section}}
            </li>
            {{/if}}
            {{#if user.year}}
            <li>
              <b>Year: </b> {{user.year}}
            </li>
            {{/if}}
          </ul>
        </div>
      </div><br />


      <div class="row">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#home">Tests</a></li>
          <li><a data-toggle="tab" href="#Assignments">Assignments</a></li>
          <li><a data-toggle="tab" href="#Marks">Marks</a></li>
        </ul>

        <div class="tab-content">

          <div id="home" class="tab-pane fade in active">
            <h1 class="text-center">Tests</h1>
            <div class="panel-group" style="max-width:90%; margin: 0em auto;">

              {{#if test}}
                {{#each test}}
                <div class="panel-group" style="max-width:90%; margin: 0em auto;">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h4 class="panel-title">
                          <a data-toggle="collapse" href="#{{this.name}}1"><strong>{{this.name}}</strong>
                            <span class="hidden-xs">
                              <p class="timer pull-right text-danger">
                                <b>Deadline:</b> {{this.deadline}}
                              </p>
                            </span>
                          </a>
                        </h4>
                      </div>
                      <div id="{{this.name}}1" class="panel-collapse collapse">
                        <div class="panel-body">
                          <h3>
                            {{this.subject}}
                          </h3>
                          <span class="visible-xs">
                            <p class="timer pull-right text-danger">
                              <b>Deadline:</b> {{this.deadline}}
                            </p>
                          </span>
                          <p class="text-danger">
                            <strong>You can only take this test once.</strong>
                          </p>
                          <a href="/takeTest/{{this.name}}/1"><button class="btn btn-info">Take the test</button></a>
                        </div>
                      </div>
                    </div>
                  </div>
                {{/each}}
              {{/if}}

            </div>
          </div>

          <div id="Assignments" class="tab-pane fade">
            <h1 class="text-center">Assignments</h1>
            <div class="panel-group" style="max-width:90%; margin: 0em auto;">

              {{#if assignment}}
                {{#each assignment}}
                <div class="panel-group" style="max-width:90%; margin: 0em auto;">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h4 class="panel-title">
                          <a data-toggle="collapse" href="#{{this._id}}1"><strong>{{this.name}}</strong></a>
                          <span class="hidden-xs">
                            <p class="text-danger pull-right">
                              <b>Deadline:</b>{{this.deadline}}
                            </p>
                          </span>
                        </h4>
                      </div>
                      <div id="{{this._id}}1" class="panel-collapse collapse">
                        <div class="panel-body">
                          <span class="visible-xs text-danger">
                            <p><b>Deadline:</b> {{this.deadline}}</p>
                          </span>
                          {{#each questions}}
                            <p>
                              {{this.qNo}}.
                              {{this.question}}
                            </p>
                          {{/each}}
                        </div>
                      </div>
                    </div>
                  </div>
                {{/each}}
              {{/if}}

            </div>

          </div>

          <div id="Marks" class="tab-pane fade">
            <h1 class="text-center">Marks</h1>

            {{#each answer}}
            <div class="panel panel-default" style="max-width: 80%; margin: 1em auto;">
              <div class="panel-body">
                <ul class="list-inline text-center">
                  <li>
                    <h4>Appeard for: <span class="text-info">{{this.name}}</span></h4>
                  </li>
                  <li>
                    <h4>Scored: <span class="text-info">{{this.scored}}/{{this.numberOfQuestions}}</span><h4>
                  </li>
                </ul>
              </div>
            </div>
            {{/each}}

          </div>

        </div>

      </div>

    </div>
  </div>

  <script>
  </script>
</div>
