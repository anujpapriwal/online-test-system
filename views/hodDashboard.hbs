<div class="container">
  {{> header }}
  <div class="panel panel-default">
    <div class="panel-heading text-center"><h2><b>Dashboard</b></h2></div>
    <div class="panel-body">

      <div class="panel panel-default" style="max-width: 80%; margin: 1em auto;">
        <div class="panel-heading text-center"><b>Your Profile</b></div>
        <div class="panel-body">
          <ul class="list-inline">
            <li>
              <b>Email: </b> {{user.email}}
            </li>
            <li>
              <b>Username: </b> {{user.username}}
            </li>
            {{#if user.section}}
            <li>
              <b>Section: </b> {{user.section}}
            </li>
            {{/if}}
            {{#if user.year}}
            <li>
              <b>Year: </b> {{user.year}}
            </li>
            {{/if}}
          </ul>
        </div>
      </div><br />


      <div class="row">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#home">Faculties</a></li>
          <li><a data-toggle="tab" href="#Classes">Classes</a></li>
        </ul><br />

        <div class="tab-content">
          <div id="home" class="tab-pane fade in active">
            <div class="text-center">
              <a href="/facultyRegister"><button type="button" class="btn btn-info btn-lg">Add Faculty</button></a>
            </div>
            {{#each faculties}}
            <div class="row">
              <div class="container">
                <div class="panel panel-default" style="max-width: 90%; margin: 1em auto;">
                  <div class="panel-body">
                    <ul class="list-inline">
                      <li>
                        <b>Email: </b> {{this.email}}
                      </li>
                      <li>
                        <b>Username: </b> {{this.username}}
                      </li>
                      <li>
                        <b>Class assigned: </b>
                        {{#each this.classes}}
                          {{this.year}}-{{this.section}}|{{this.subject}},
                        {{/each}}
                      </li>
                    </ul>
                    <a href="/assignClass/{{this.username}}"><button type="button" class="btn btn-success btn-sm">Assign class</button></a>
                    <a href="/cancelClass/{{this.username}}"><button type="button" class="btn btn-danger btn-sm">Cancel class</button></a>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>

          <div id="Classes" class="tab-pane fade">
            <div class="container text-center">
              <br />

              <ul class="list-inline">

                <li>
                  <div class="panel-group" style="margin: 0em auto;">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h4 class="panel-title">
                          <a data-toggle="collapse" href="#collapse1">First Year</a>
                        </h4>
                      </div>
                      <div id="collapse1" class="panel-collapse collapse">
                        <div class="panel-body">
                          <ul class="list-inline">
                            <a href="/Class/1/A"><button type="button" class="btn btn-default btn-lg">Section A</button></a>
                            <a href="/Class/1/B"><button type="button" class="btn btn-default btn-lg">Section B</button></a>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>

                  <br />
                </li>

                <li>
                  <div class="panel-group" style="margin: 0em auto;">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h4 class="panel-title">
                          <a data-toggle="collapse" href="#collapse2">Second Year</a>
                        </h4>
                      </div>
                      <div id="collapse2" class="panel-collapse collapse">
                        <div class="panel-body">
                          <ul class="list-inline">
                            <a href="/Class/2/A"><button type="button" class="btn btn-default btn-lg">Section A</button></a>
                            <a href="/Class/2/B"><button type="button" class="btn btn-default btn-lg">Section B</button></a>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>

                  <br />
                </li>

                <li>
                  <div class="panel-group" style="margin: 0em auto;">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h4 class="panel-title">
                          <a data-toggle="collapse" href="#collapse3">Third Year</a>
                        </h4>
                      </div>
                      <div id="collapse3" class="panel-collapse collapse">
                        <div class="panel-body">
                          <ul class="list-inline">
                            <a href="/Class/3/A"><button type="button" class="btn btn-default btn-lg">Section A</button></a>
                            <a href="/Class/3/B"><button type="button" class="btn btn-default btn-lg">Section B</button></a>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>

                  <br />
                </li>

                <li>
                  <div class="panel-group" style="margin: 0em auto;">
                    <div class="panel panel-default">
                      <div class="panel-heading">
                        <h4 class="panel-title">
                          <a data-toggle="collapse" href="#collapse4">Fourth Year</a>
                        </h4>
                      </div>
                      <div id="collapse4" class="panel-collapse collapse">
                        <div class="panel-body">
                          <ul class="list-inline">
                            <a href="/Class/4/A"><button type="button" class="btn btn-default btn-lg">Section A</button></a>
                            <a href="/Class/4/B"><button type="button" class="btn btn-default btn-lg">Section B</button></a>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>

                  <br />
                </li>

              </ul>







            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
