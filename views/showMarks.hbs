<div class="container">
  {{> header }}
  <br />
  {{#if messages}}
  <div class="alert alert-success alert-dismissible" style="max-width: 80%; margin: 1.25em auto;">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>{{messages}}</strong>
  </div>
  {{/if}}
  <span class="text-center">
    <h1>Class: {{year}}-{{section}}</h1>
  </span>
  <br />
  {{#each answers}}
    <div class="panel panel-default" style="max-width: 80%; margin: 1em auto;">
      <div class="panel-body" style="font-size: 1.25em">
        <ul class="list-inline">
          <li>
            <b>Username: </b> <span class="text-info">{{this.username}}</span>
          </li>
          <li>
            <b>Section: </b> <span class="text-info">{{this.section}}</span>
          </li>
          <li>
            <b>Year: </b> <span class="text-info">{{this.year}}</span>
          </li>
        </ul>
        <div class="alert alert-info" style="max-width: 80%; margin: 1.25em auto;">
          <ul class="list-inline">
            <li>
              <b>Appeared for: </b><span class="text-danger">{{this.name}}</span>
            </li>
            <li>
              <b>Scored: </b> <span class="text-danger">{{this.scored}}/{{this.numberOfQuestions}}</span>
            </li>
          </ul>
        </div>
        <form action="/showMarks" method="post">
          <div class="form-group" style="width: 80%; margin: 1em auto;">
            <div class="col-xs-6 input-group hidden" style="margin: auto;">
              <input id="role" type="password" class="form-control" name="name" value="{{this._id}}">
            </div>
            <div class="col-xs-6 input-group hidden" style="margin: auto;">
              <input id="role" type="password" class="form-control" name="year" value="{{year}}">
            </div>
            <div class="col-xs-6 input-group hidden" style="margin: auto;">
              <input id="role" type="password" class="form-control" name="section" value="{{section}}">
            </div>
            <button class="btn btn-danger" type="submit">Remove attempt</button>
          </form>
      </div>
    </div>
  {{/each}}
</div>
